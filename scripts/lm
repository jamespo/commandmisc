#!/usr/bin/env python

# lm - LsModified
# -*-Python-*-

from __future__ import print_function
import datetime
import time
import dateutil.relativedelta
import os
import sys

def calc_timediff(epoch1, epoch2):
    dt1 = datetime.datetime.fromtimestamp(epoch1)
    dt2 = datetime.datetime.fromtimestamp(epoch2)
    rd = dateutil.relativedelta.relativedelta (dt2, dt1)
    return "%dy/%dm/%dd %dh:%dm:%ds" % (rd.years, rd.months, rd.days, rd.hours, rd.minutes, rd.seconds)

def filetime(filename):
    '''return last modified time for filename'''
    return int(os.stat(filename).st_mtime)

def main():
    curr_time = int(time.time())
    filename = sys.argv[1]
    file_time = filetime(filename)
    print("%s %s" % (filename, calc_timediff(file_time, curr_time)))


if __name__ == '__main__':
    main()
